<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <SurfaceView
                android:id="@+id/surface_main"
                android:layout_width="match_parent"
                android:layout_height="400dp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_frameRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_startRecord"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="startRecord"/>
                <Button
                    android:id="@+id/btn_startPlay"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="startPlay"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_testback"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="testBack"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_playvp8"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="startplayvp8"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioGroup
                    android:id="@+id/rg_bitratemode"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" >
                    <RadioButton
                        android:id="@+id/rb_vbr"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="vbr" />
                    <RadioButton
                        android:id="@+id/rb_cbr"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:checked="true"
                        android:text="cbr"/>
                </RadioGroup>

                <RadioGroup
                    android:id="@+id/rg_resolution"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" >
                    <RadioButton
                        android:id="@+id/rb_480p"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:checked="true"
                        android:text="360p" />
                    <RadioButton
                        android:id="@+id/rb_720p"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="720p"/>
                    <RadioButton
                        android:id="@+id/rb_1080p"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="1080p"/>
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="bitrate"/>
                <EditText
                    android:id="@+id/et_bitrate"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="200"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="kbps iframeInterval"/>
                <EditText
                    android:id="@+id/et_iframeInterval"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="5"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="fps"/>
                <EditText
                    android:id="@+id/et_fps"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="20"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
